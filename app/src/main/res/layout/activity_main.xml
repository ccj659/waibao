<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp" >

        <RelativeLayout
            android:id="@+id/homePage_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ffffff" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/homePage_image"
                    android:layout_width="30dip"
                    android:layout_height="25dip"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/home_tab_icon1" />

                <TextView
                    android:id="@+id/homePage_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dip"
                    android:text="推荐产品"
                    android:textColor="#bcccd4"
                    android:textSize="14dip" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/loaninvestment_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ffffff" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/loaninvestment_image"
                    android:layout_width="30dip"
                    android:layout_height="25dip"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/home_tab_icon2" />

                <TextView
                    android:id="@+id/loaninvestment_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dip"
                    android:text="投资理财"
                    android:textColor="#bcccd4"
                    android:textSize="14dip" />
            </LinearLayout>
        </RelativeLayout>

         <RelativeLayout
            android:id="@+id/personalcenter_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ffffff" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/personalcenter_image"
                    android:layout_width="30dip"
                    android:layout_height="25dip"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/home_tab_icon3" />

                <TextView
                    android:id="@+id/personalcenter_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dip"
                    android:text="我的账户"
                    android:textColor="#bcccd4"
                    android:textSize="14dip" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>