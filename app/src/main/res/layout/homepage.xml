<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_4"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.example.jinglinzichan.view.SlideShowView
                android:id="@+id/homepage_slideshow"
                android:layout_width="match_parent"
                android:layout_height="190dip" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_10"
                android:gravity="center"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="30dip"
                        android:layout_height="30dip"
                        android:layout_marginBottom="5dip"
                        android:layout_marginTop="10dip"
                        android:src="@drawable/home_nav_icon01" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dip"
                        android:text="新手礼"
                        android:textColor="@color/color_7"
                        android:textSize="@dimen/dimen_15" />
                </LinearLayout>

                <View
                    android:layout_width="0.5dip"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="20dip"
                    android:layout_marginTop="20dip"
                    android:background="@color/color_4" />

                <LinearLayout
                    android:id="@+id/guanyuwomen"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1dip"
                    android:layout_marginRight="1dip"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="30dip"
                        android:layout_height="30dip"
                        android:layout_marginBottom="5dip"
                        android:layout_marginTop="10dip"
                        android:src="@drawable/home_nav_icon02" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dip"
                        android:text="关于我们"
                        android:textColor="@color/color_7"
                        android:textSize="@dimen/dimen_15" />
                </LinearLayout>

                <View
                    android:layout_width="0.5dip"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="20dip"
                    android:layout_marginTop="20dip"
                    android:background="@color/color_4" />

                <LinearLayout
                    android:id="@+id/anquanbaozhang"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="30dip"
                        android:layout_height="30dip"
                        android:layout_marginBottom="5dip"
                        android:layout_marginTop="10dip"
                        android:src="@drawable/home_nav_icon03" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dip"
                        android:text="安全保障"
                        android:textColor="@color/color_7"
                        android:textSize="@dimen/dimen_15" />
                </LinearLayout>

                <View
                    android:layout_width="0.5dip"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="20dip"
                    android:layout_marginTop="20dip"
                    android:background="@color/color_4" />

                <LinearLayout
                    android:id="@+id/bangzhu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="30dip"
                        android:layout_height="30dip"
                        android:layout_marginBottom="5dip"
                        android:layout_marginTop="10dip"
                        android:src="@drawable/home_nav_icon04" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dip"
                        android:text="帮助"
                        android:textColor="@color/color_7"
                        android:textSize="@dimen/dimen_15" />
                </LinearLayout>
            </LinearLayout>

            <com.example.jinglinzichan.view.DynamicListView
                android:id="@+id/homepage_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_15"
                android:background="@color/color_10"
                android:divider="@color/color_4"
                android:dividerHeight="10dip" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>