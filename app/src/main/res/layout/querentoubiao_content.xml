<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/queren_mingcheng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:layout_marginLeft="20dip"
            android:layout_marginTop="10dip"
            android:textColor="@color/color_5"
            android:textSize="@dimen/dimen_18" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="@color/color_12" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dip"
            android:layout_marginLeft="20dip"
            android:layout_marginTop="15dip"
            android:text="借款金额："
            android:textColor="@color/color_1"
            android:textSize="@dimen/dimen_18" />

        <TextView
            android:id="@+id/queren_jiekuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_5"
            android:textSize="@dimen/dimen_18" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:text="完成进度："
            android:textColor="@color/color_1"
            android:textSize="@dimen/dimen_18" />

        <TextView
            android:id="@+id/queren_jindu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_5"
            android:textSize="@dimen/dimen_18" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dip"
            android:layout_marginLeft="20dip"
            android:layout_marginTop="15dip"
            android:text="年利率："
            android:textColor="@color/color_1"
            android:textSize="@dimen/dimen_16" />

        <TextView
            android:id="@+id/queren_nianlilv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_5"
            android:textSize="@dimen/dimen_16" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:text="期限："
            android:textColor="@color/color_1"
            android:textSize="@dimen/dimen_18" />

        <TextView
            android:id="@+id/queren_qixian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_5"
            android:textSize="@dimen/dimen_18" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dip"
            android:layout_marginLeft="20dip"
            android:layout_marginTop="15dip"
            android:text="还款方式："
            android:textColor="@color/color_1"
            android:textSize="@dimen/dimen_18" />

        <TextView
            android:id="@+id/queren_fangshi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_5"
            android:textSize="@dimen/dimen_18" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:text="可投金额："
            android:textColor="@color/color_1"
            android:textSize="@dimen/dimen_18" />

        <TextView
            android:id="@+id/queren_ketou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_5"
            android:textSize="@dimen/dimen_18" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dip"
            android:layout_marginLeft="20dip"
            android:layout_marginTop="15dip"
            android:text="可用余额："
            android:textColor="@color/color_1"
            android:textSize="@dimen/dimen_18" />

        <TextView
            android:id="@+id/queren_keyong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_1"
            android:textSize="@dimen/dimen_18" />

        <TextView
            android:text=" 充值 "
            style="@style/BtnNormalTheme"
            android:id="@+id/woyaochongzhi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_weight="1"
            android:background="@drawable/querentoubiaoxy" >

            <EditText
                android:id="@+id/queren_shurujine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dip"
                android:background="#0000"
                android:hint="请输入投标金额"
                android:textColor="@color/color_5"
                android:textColorHint="@color/color_1"
                android:textSize="@dimen/dimen_14" />
        </LinearLayout>

        <TextView
            android:text=" 全投 "
            style="@style/BtnNormalTheme"
            android:id="@+id/quantou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dip"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dip"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:text="使用邀请码："
            android:textColor="@color/color_1"
            android:textSize="@dimen/dimen_16" />

        <LinearLayout
            android:layout_width="150dip"
            android:layout_height="wrap_content"
            android:background="@drawable/querentoubiaoxy" >

            <EditText
                android:id="@+id/qingshuruyaoqingma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dip"
                android:background="#0000"
                android:hint="请输入邀请码"
                android:textColor="@color/color_5"
                android:textColorHint="@color/color_1"
                android:textSize="@dimen/dimen_14" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dip"
            android:src="@drawable/c1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我已阅读并同意"
            android:textColor="@color/color_5"
            android:textSize="14dip" />

        <TextView
            android:id="@+id/fuwuxieyi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《出借咨询与服务协议》"
            android:textColor="@color/color_23"
            android:textSize="14dip" />
    </LinearLayout>

</LinearLayout>